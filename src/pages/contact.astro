---
import Layout from "@layouts/Layout.astro";
import { changeLanguage, t } from "i18next";
import { contactMethods } from "@data/contact";
import Card from "@components/contact/Card.astro";

changeLanguage("en");
---

<Layout title="contact.title">
  <main class="mx-auto max-w-5xl pb-4">
    <h1
      class="pb-6 text-center text-3xl font-black uppercase sm:text-5xl md:pb-8"
    >
      {t("contact.title")}
    </h1>
    <div class="flex flex-col gap-8 sm:flex-row">
      {contactMethods.map((method) => <Card method={method} />)}
    </div>
  </main>
</Layout>
